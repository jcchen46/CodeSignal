bool bishopAndPawn(string b, string p) {
    if      (b[1]>=p[1] && b[0]>=p[0])      return (b[0]-p[0]) == (b[1]-p[1]);
    else if (b[1]>=p[1] && b[0]<p[0])       return (p[0]-b[0]) == (b[1]-p[1]);
    else if (b[1]<p[1] && b[0]>=p[0])       return (b[0]-p[0]) == (p[1]-b[1]);
    else                                    return (p[0]-b[0]) == (p[1]-b[1]);
    
}
